from google.appengine.ext import ndb

class Picture(ndb.Model):
    author = ndb.StringProperty()
    name = ndb.StringProperty(default='')  # Unique name.

    # Uncomment the next two lines after running the app once. Once you
    # uncomment these two lines and re-run the app, the database schema will
    # be updated appropriately for every entity.
    num_votes = ndb.IntegerProperty(default=0)
    avg_rating = ndb.FloatProperty(default=0)
